<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.*?>

<StackPane fx:id="rootPane" prefWidth="1200.0" prefHeight="800.0"
           focusTraversable="true"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controller.ControllerMotDePasseOublie">

    <ImageView fitHeight="800.0" fitWidth="1200.0" opacity="0.5" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@/images/voyage_bg.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="20.0" maxWidth="400.0" maxHeight="450.0"
          style="-fx-background-color: rgba(244, 244, 244, 0.9); -fx-border-color: #FF9800; -fx-border-width: 3; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <Label text="Récupération de compte" textFill="#FF9800">
            <font>
                <Font name="Segoe UI Bold" size="26.0" />
            </font>
        </Label>

        <Label text="Entrez votre email pour recevoir un code de réinitialisation."
               textFill="#555555" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="Segoe UI" size="14.0" />
            </font>
        </Label>

        <TextField fx:id="emailRecupField" promptText="Votre adresse email"
                   style="-fx-background-radius: 20; -fx-padding: 10; -fx-border-color: #FF9800; -fx-border-radius: 20; -fx-background-color: white;" />

        <Button text="ENVOYER LE CODE" onAction="#handleSendCode"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;"
                prefWidth="250.0" prefHeight="45.0">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Hyperlink text="Retour à la connexion" onAction="#showLogin"
                   style="-fx-text-fill: #555555; -fx-font-weight: bold;" />
    </VBox>
</StackPane>