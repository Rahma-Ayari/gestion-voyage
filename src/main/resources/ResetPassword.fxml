<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.*?>

<StackPane fx:id="rootPane" prefWidth="1200.0" prefHeight="800.0"
           focusTraversable="true"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controller.ControllerResetPassword">

    <ImageView fitHeight="800.0" fitWidth="1200.0" opacity="0.5" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@/images/voyage_bg.jpg" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="15.0" maxWidth="400.0" maxHeight="500.0"
          style="-fx-background-color: rgba(244, 244, 244, 0.9); -fx-border-color: #FF9800; -fx-border-width: 3; -fx-border-radius: 20; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">

        <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
        </padding>

        <Label text="Nouveau mot de passe" textFill="#FF9800" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="Segoe UI Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Saisissez le code reçu et votre nouveau mot de passe." textFill="#555555" textAlignment="CENTER" wrapText="true" />

        <VBox spacing="10">
            <TextField fx:id="codeField" promptText="Code de vérification (6 chiffres)"
                       style="-fx-background-radius: 20; -fx-padding: 10; -fx-border-color: #FF9800; -fx-border-radius: 20;" />

            <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe"
                           style="-fx-background-radius: 20; -fx-padding: 10; -fx-border-color: #FF9800; -fx-border-radius: 20;" />

            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe"
                           style="-fx-background-radius: 20; -fx-padding: 10; -fx-border-color: #FF9800; -fx-border-radius: 20;" />
        </VBox>

        <Button text="VALIDER LE CHANGEMENT" onAction="#handleReset"
                style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand;"
                prefWidth="250.0" prefHeight="45.0">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <Hyperlink text="Annuler et retourner au login" onAction="#showLogin" style="-fx-text-fill: #555555;" />
    </VBox>
</StackPane>